<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&display=swap" rel="stylesheet">
    <style>
    header{
        background-color: #BF2626;
        height: 60px;
        width: 100%;
        margin:0px;
    }
    #search{
        position:absolute;
        left: 10%;
        top: 6.5%;
        transform: translateY(-50%);
        background-color: rgb(255, 255, 255,0.2);
        border:none;
        height: 4%;
        width: 20%;
    }

    #icone{
        position:absolute;
        right: 5%;
        top: 6%;
        transform: translateY(-50%);
    }
    #mapa{
        height: 70%;
        width: 40%;
        margin-top:3%;
        float: left;
    }   
    .form-background{
        height: 68%;
        width: 50%;
        margin-left: 45%;
        margin-top:3%;
        background-color: #BF2626;
        border-radius: 20px;
        padding-top: 10px;
    }
    .row{
        display: block;
        margin-left: 20px;
        margin-top: 10px; 
    }
    label{
        font-family: 'Kdam Thmor Pro', sans-serif;
        color:white;
        font-weight: bolder;
    }
    input{
        border:0px;
        background-color: rgb(255, 255, 255,0.2);
        width: 50%;
        height:8%;
        color:white;
    }
    #description{
        width:60%;
        height: 30%;
        margin-left: 16%;
    }
    #name{
        margin-left: 20%;
    }
    #start{
        margin-left: 20.5%;
    }
    #end{
        margin-left: 22.5%;
    }
    #latitude{
        margin-left: 17.5%;
    }
    #longitude{
        margin-left: 15.5%;
    }
    .submit-button{
        background-color: #F02E2E;
        width: 20%;
        height: 10%;
        color: #FFFFFF;
        border: 1px solid white;
        border-radius: 20px;
        font-family: 'Kdam Thmor Pro', sans-serif;
        font-size:14px;
        margin-left: 67%;
        margin-top: 2%;
    }
    ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
        color: white;
        opacity: 1; /* Firefox */
    }
    </style>
</head>
<body>
    <header>
        <form>
          <input id="search" type="text">
        </form>
        <image id="icone" src="images/icon.png" width="3%"></image>
    </header> 
    <iframe id="mapa" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3101408.6780743822!2d-79.26098141055174!3d21.690500135269545!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1spt-BR!2sbr!4v1652744310748!5m2!1spt-BR!2sbr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    <div class = "form-background">
        <form  method="post" action="/eventos/">
            <div class="row">
                <label>Nome</label> 
                <input type="text" class="form-control" name="name" id="name" placeholder="Escreva o nome do evento" />
            </div>
            <div class="row">
                <label>Inicio</label> 
                <input type="datetime-local" class="form-control" name="start" id="start"/>
            </div>
            <div class="row">
                <label>Fim</label> 
                <input type="datetime-local" class="form-control" name="end" id="end"/>
            </div>
            <div class="row">
                <label>Latitude</label> 
                <input type="text" class="form-control" name="latitude" id="latitude" placeholder="Escreva a latitude do evento" />
            </div>
            <div class="row">
                <label>Longitude</label> 
                <input type="text" class="form-control" name="Longitude" id="Longitude" placeholder="Escreva a latitude do evento" />
            </div>
            <div class="row">
                <label id="descri">Descrição</label> 
                <input type="text" class="form-control" name="description" id="description"/>
            </div>
            
            <div class="form-group ">
                <button type="submit" class="submit-button">Criar</button>
            </div>
        </form>
        
    </div>

</body>